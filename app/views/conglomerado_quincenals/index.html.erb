<%= render 'topsidebar/navsidebar' %>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <div id="table-cursos">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <center><h3>Conglomerado de Reportes</h3></center>
      </div>
      <div class="table-responsive">
        <table class="table table-striped txtCenter">
          <thead>
            <tr>
              <th class="txtCenter">Materia</th>
              <th class="txtCenter">Tutor</th>
              <th class="txtCenter">Fecha</th>
            </tr>
          </thead>
          <tbody>
            <% @conglomerado_quincenals.each do |conglomerado_quincenal| %>
              <tr class='pickHover reporte_row' data-link='conglomerado_quincenals/<%=conglomerado_quincenal.id%>'>
                <td>Matematicas I</td>
                <td><%=get_usuario_name_by_id(conglomerado_quincenal.tutor)%></td>
                <td><%= conglomerado_quincenal.created_at.to_date %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row"> 
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <%= link_to "Crear Reporte", new_conglomerado_quincenal_path, class: 'btn btn-primary btn-lg', :id => "btnSubmit"%>
            </div>
      </div>
    </div>
  </div>
</div>






