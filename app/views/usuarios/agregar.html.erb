<%= render 'topsidebar/navsidebar' %>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <div id="table-cursos">
    <div class="panel panel-primary">

    <div class="panel-heading" style="height: 79px;">
      <center><h1 >Usuarios</h1></center>
    </div>

<div class="row" id="">
        <div class="col-md-12"> 
          <div class="col-sm-12" id="singleUser">
            <h2>Agregar un Solo Usuario</h2>
            <%= link_to 'Agregar Usuario', new_usuario_path, class: "btn btn-primary "%>
          </div>
          <div class="col-sm-12" id="multipleUser">
            <h2>Agregar Multiples Usuarios</h2>
            <%= form_tag import_usuarios_path, multipart: true do %>
              <%= file_field_tag :file, class: "inline"  %>
              <%= submit_tag "Importar", class: "btn btn-primary padd inline" %>
            <% end %>
          </div>
          <div class="col-sm-12" id="singleUser">
            <h2>Visualizar Usuarios Existentes</h2>
            <%= link_to 'Ver Usuarios', usuarios_path, class: "btn btn-primary "%>
          </div>
        </div>
      </div>

         </div>
  </div>
</div>