<%= render 'topsidebar/navsidebar' %>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="panel-heading">
      <h1 class="page-header">Reportes Quincenales</h1>
    </div>
    
    <% @tutores.each do |tutor| %>
        <h3 class="tutor_reportes_header" id='<%=tutor.cuenta%>'><span><img class='arrow_icon' src="expand_arrow.png"></span>Tutor: <%=tutor.nombres%> <%=tutor.apellido_p%> <%=tutor.apellido_m%></h3>
        <div class='tutor_reportes_container content_<%=tutor.cuenta%>'>
            <% get_alumnos_by_tutor(tutor.cuenta).each do |alumno| %>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <div class="tarjeta alumno_tarjeta">
                        <div class='tarjeta_nombre'><%=alumno.nombres%></div>
                        <div class='tarjeta_apellidos'><%=alumno.apellido_p%> <%=alumno.apellido_m%></div>
                        <div class='tarjeta_matricula'><%=alumno.matricula%></div>
                        <%get_reporte_quincenals_by_alumno(tutor.cuenta, alumno.alumno)%>
                        <div class='info_alumno'><span>Estatus m√°s reciente: </span><%=get_ultimo_estatus%></div>
                        <div class='info_alumno'><span>Localizado recientemente: </span><%=get_ultimo_localizado%></div>
                        <div class='contenedor_boton_reportes'>
                            <div class='contenedor_boton_reportes_header'>Reportes</div>
                            <%=get_reporte_quincenals_buttons%>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
    
  </div>
</div>