<%= form_for(reporte_quincenal) do |f| %>
  <% if reporte_quincenal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reporte_quincenal.errors.count, "error") %> prohibited this reporte_quincenal from being saved:</h2>

      <ul>
      <% reporte_quincenal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header"> Reporte Quincenal de Actividad y Desempeño del Alumno</h1>
    <div class="row">
        <div class="col-sm-6">
            <div class="row">
                <h2>Alumno a evaluar</h2>
            </div>
            <div class="row">
                <!-- Tutores DD -->
                <select class="selectpicker">
                    <option value="" selected disabled>Seleccionar alumno a evaluar</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
    <div id="table-cursos" class="" style="margin-top: 20px;">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <center>Evaluación del alumno</center>
            </div>
            <div class="panel-body">
                <!-- Pregunta 1-->
                <h4>1.- Estatus del alumno:</h4>
                <div class="table-responsive">
                    <table class="table table-striped" style="text-align: center;">
                        <thead>
                            <tr>
                                <th style="text-align: center;">Activo</th>
                                <th style="text-align: center;">Inactivo</th>
                                <th style="text-align: center;">Parcialmente Activo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="width: 33.33%"><%= f.radio_button :estatus, "Activo", id: '' %></td>
                                <td style="width: 33.33%"><%= f.radio_button :estatus, "Inactivo", id: '' %></td>
                                <td style="width: 33.33%"><%= f.radio_button :estatus, "Parcialmente Activo", id: '' %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Termina pregunta 1 -->
        
                <!-- Pregunta 2-->
                <h4>2.- Localizado:</h4>
                <div class="table-responsive">
                    <table class="table table-striped" style="text-align: center;">
                        <thead>
                        <tr>
                            <th style="text-align: center;">Sí</th>
                            <th style="text-align: center;">No</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= f.radio_button :localizado, "Si", id: '' %></td>
                                <td><%= f.radio_button :localizado, "No", id: '' %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Termina pregunta 2 -->
        
                <!-- Pregunta 3 -->
                <h4>3.- Comentarios:</h4>
                <%= f.text_area :comentarios %>
                <!-- Termina pregunta 3 -->

                <div class="row"> 
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <%= f.submit "Enviar reporte", class:"btn btn-primary btn-lg"  %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>

